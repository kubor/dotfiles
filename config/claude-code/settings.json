      "Bash(git push origin main)",
      "Bash(pip:*)",
      "Bash(rsync:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)",
      "Bash(rm -rf:*)",
      "Bash(rm:*)",
      "Bash(sudo:*)",
      "Bash(chown root:*)",
      "Bash(chown:*)",
      "Bash(chgrp:*)",
      "Bash(chmod:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)"
